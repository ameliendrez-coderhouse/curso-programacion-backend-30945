<h1>Welcome Coders</h1>

<h2>Agregar productos</h2>

<form>
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text">Name</span>
        </div>
        <input id="name" type="text" class="form-control" aria-label="Name">
    </div>
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text">$</span>
        </div>
        <input id="price" type="text" class="form-control" aria-label="Price">
    </div>
    <div class="form-group">
        <input id="saveProduct" class="btn btn-success my-3" type="submit" value="Guardar">
    </div>
</form>

<h2>Lista</h2>
<div>
    <table class="table table-sm table-dark">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Precio</th>
        </tr>
    </thead>
    <tbody id="lista">
    </tbody>
</table>
</div>

<script src="js/index.js"></script>